{
    "name": "kyasms/kya-sms-php",
    "description": "Official PHP SDK for KYA SMS API - Send SMS, OTP, and manage campaigns",
    "keywords": ["sms", "otp", "api", "sdk", "kya", "messaging", "bulk-sms", "campaign"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "KYA SMS Team",
            "email": "support@kyasms.com"
        }
    ],
    "homepage": "https://github.com/ayeziel/kya-sms-php",
    "support": {
        "issues": "https://github.com/ayeziel/kya-sms-php/issues",
        "docs": "https://docs.kyasms.com"
    },
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.0",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "KyaSms\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KyaSms\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse src --level=8",
        "cs-check": "phpcs --standard=PSR12 src",
        "cs-fix": "phpcbf --standard=PSR12 src"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
